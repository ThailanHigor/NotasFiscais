@model ProvaFabio.Models.Grupo

@{
    ViewBag.Title = "Criar grupo";
}

<h2>Novo Grupo</h2>
<div>
    @Html.ActionLink("Voltar", "Index",new { },new { @class="btn btn-info"})
</div>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2" for="Grupo1">Nome</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Grupo1, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Grupo1, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Criar" class="btn btn-success"  style="width:100%"/>
            </div>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
